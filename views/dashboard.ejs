<%- include('partials/header') %>
<style>
.dashboard-hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 70vh;
  background: linear-gradient(120deg, #5f2eea 0%, #0a0a23 100%);
  color: #fff;
  padding: 40px 5%;
  border-radius: 20px;

}
.dashboard-content {
  max-width: 50%;
}
.dashboard-title {
  font-size: 2.8rem;
  font-weight: 700;
  margin-bottom: 20px;
}
.dashboard-desc {
  font-size: 1.2rem;
  margin-bottom: 30px;
  line-height: 1.5;
}
.dashboard-btn {
  background: #ff3576;
  color: #fff;
  border: none;
  padding: 16px 36px;
  border-radius: 30px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
  text-decoration: none;
  display: inline-block;
}
.dashboard-btn:hover {
  background: #e02e68;
}
.dashboard-image {
  max-width: 70%;
  text-align: right;
}
.dashboard-image img {
  max-width: 500px;
  border-radius: 30px;
  box-shadow: 0 8px 32px rgba(0,0,0,0.25);
}
@media (max-width: 900px) {
  .dashboard-hero {
    flex-direction: column;
    text-align: center;
    padding: 30px 2%;
  }
  .dashboard-content, .dashboard-image {
    max-width: 100%;
  }
  .dashboard-image {
    margin-top: 30px;
  }
}
</style>

<div class="dashboard-hero">
  <div class="dashboard-content">
    <div class="dashboard-title">Business Travel and Expense Management, Simplified.</div>
    <div class="dashboard-desc">
      Get complete control over managing travel expenses and gain visibility into your employee corporate travel and expense management.
    </div>
    <a href="/expenses" class="dashboard-btn">View Expenses</a>
  </div>
  <div class="dashboard-image">
    <img src="https://clooper.com/blog/wp-content/uploads/2024/03/travel-expense-management-software.png" alt="Travel Dashboard" />
  </div>
</div>
<%- include('partials/footer') %>