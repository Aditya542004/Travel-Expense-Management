<%- include('partials/header') %>

<h2 style="text-align:center;">Register</h2>
<form method="POST" action="/register" class="register-form">
  <div class="form-group">
    <label for="username">Username</label><br>
    <input id="username" name="username" placeholder="Enter a unique username" required autofocus>
  </div>
  <div class="form-group">
    <label for="password">Password</label><br>
    <input id="password" name="password" type="password" placeholder="Create a password" required>
  </div>
  <div class="form-group">
    <label for="confirm_password">Confirm Password</label><br>
    <input id="confirm_password" name="confirm_password" type="password" placeholder="Re-enter your password" required>
  </div>
  <div class="form-group">
    <label for="accountType">Account Type</label><br>
    <select id="accountType" name="accountType" required>
      <option value="">Select Account Type</option>
      <option value="manager">Manager</option>
      <option value="employee">Employee</option>
    </select>
  </div>
  <button type="submit" class="btn-primary">Register</button>
</form>

<!-- Social login buttons are disabled until implemented with Passport.js or similar -->
<div class="social-login">
  <button type="button" class="btn-google" disabled title="Coming soon">
    <img src="/image/google-icon.png" alt="Google" class="icon"/> Register with Google
  </button>
  <button type="button" class="btn-facebook" disabled title="Coming soon">
    <img src="/image/facebook-icon.png" alt="Facebook" class="icon"/> Register with Facebook
  </button>
</div>

<% if (typeof error !== 'undefined' && error) { %>
  <p class="error-message"><%= error %></p>
<% } %>

<p class="login-link">
  Already have an account?
  <a href="/login">Login here</a>
</p>

<%- include('partials/footer') %>